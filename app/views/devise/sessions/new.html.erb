<h2>Log in</h2>
<div class="form-wrapper">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
    <%= f.email_field :email, autofocus: true, class:"form-field", autocomplete: "email", placeholder: "Email"  %><br>
    </div>
      <div class="field">
    <%= f.password_field :password,class:"form-field", autocomplete: "current-password", placeholder: "Current Password"%>
    </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "sub-btn"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>